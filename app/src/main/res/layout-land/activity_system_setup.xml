<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SystemSetupActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ReadingsViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReadingsTabLayout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/ReadingsTabLayout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/FrameSettingsTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frame_settings_title" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ExtensometerSettingsTabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extensometers_settings_tab" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/TempSettingsTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp_settings_title" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/LoadSettingsTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_settings_title" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/FiltersSettingsTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filters_settings_tab" />

    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>